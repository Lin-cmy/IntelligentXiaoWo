/* pages/article-detail/article-detail.wxss */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding-bottom: 40rpx;
  opacity: 0;
  transform: translateY(20px);
  animation: fadeIn 0.5s ease-out forwards;
}

.header {
  position: relative;
  width: 100%;
  height: 400rpx;
}

.header-image {
  width: 100%;
  height: 100%;
}

.title-container {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 60rpx 40rpx 40rpx;
  background: linear-gradient(to top, rgba(153, 248, 181, 0.7), rgba(0, 0, 0, 0));
  color: white;
}

.title {
  font-size: 44rpx;
  font-weight: 600;
  line-height: 1.3;
  text-shadow: 0 2rpx 4rpx rgba(174, 230, 190, 0.7);
}

.meta {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  font-size: 24rpx;
  opacity: 0.9;
}

.category {
  background-color: rgba(116, 221, 197, 0.5); /* Use a semi-transparent version of SteelBlue */
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
}

.tag {
  font-style: italic;
}

.content-card {
  background-color: #fdfefd;
  margin: -40rpx 30rpx 0;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 1;
}

.summary {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
  padding-bottom: 30rpx;
  font-style: italic;
}

.divider {
  height: 1px;
  background-color: #e9ecef;
  margin-bottom: 30rpx;
}

.content {
  font-size: 32rpx;
  color: #333;
  line-height: 1.8;
  text-align: justify;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 28rpx;
  color: #888;
}

@keyframes fadeIn {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}