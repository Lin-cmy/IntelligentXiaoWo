/* 顶部导航栏 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 96rpx;
  padding: 0 32rpx;
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}
.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #222;
}
.nav-menu-icon {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 12rpx 0;
}
.icon-dot {
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #888;
  margin-left: 6rpx;
}

/* 悬浮菜单 */
.float-menu {
  position: absolute;
  right: 32rpx;
  top: 100rpx;
  width: 220rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 16rpx 0 rgba(0,0,0,0.08);
  z-index: 100;
  padding: 16rpx 0;
}
.menu-item {
  padding: 26rpx 32rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
}
.menu-item:last-child {
  border-bottom: none;
}
.menu-item:active {
  background: #f5f6fa;
}

/* 弹窗 */
.popup-change {
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.32);
  z-index: 200;
  display: flex;
  justify-content: center;
  align-items: center;
}
.popup-content {
  width: 540rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 48rpx 32rpx 32rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.popup-change-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #222;
}
.popup-change-input {
  width: 100%;
  height: 72rpx;
  border: 1rpx solid #ececec;
  border-radius: 10rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
  margin-bottom: 36rpx;
}
.popup-btns {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.popup-btn {
  flex: 1;
  height: 60rpx;
  margin: 0 8rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
}
.popup-btn.cancel {
  background: #f5f6fa;
  color: #888;
  border: none;
}
.popup-btn.confirm {
  background: #4488ff;
  color: #fff;
  border: none;
}

/* 设备列表 */
.device-list {
  margin-top: 24rpx;
  padding: 0 32rpx;
}
.device-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  margin-bottom: 16rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}
.device-name {
  font-size: 30rpx;
  color: #222;
}
.device-arrow {
  font-size: 32rpx;
  color: #bbb;
}