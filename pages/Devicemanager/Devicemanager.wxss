/* 全局页面样式 */
page {
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
  box-sizing: border-box;
}

/* 顶部导航栏 */
.nav-bar {
  position: relative;
  height: 110rpx;
  background: rgba(255, 255, 255, 0.95);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 10;
  backdrop-filter: blur(10px);
}

.nav-title {
  font-size: 42rpx;
  font-weight: bold;
  color: #2c3e50;
}

.nav-menu-icon {
  width: 70rpx;
  height: 70rpx;
  background: rgba(127, 182, 159, 0.1);
  border-radius: 35rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transition: all 0.3s ease;
}

.nav-menu-icon:active {
  transform: scale(0.95);
  background: rgba(127, 182, 159, 0.2);
}

.icon-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #7FB69F;
  margin: 3rpx 0;
  display: block;
}

/* 悬浮菜单 */
.float-menu {
  position: absolute;
  top: 100rpx;
  right: 30rpx;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 20rpx;
  box-shadow: 0 12rpx 36rpx rgba(0, 0, 0, 0.15);
  z-index: 20;
  min-width: 220rpx;
  padding: 12rpx 0;
  animation: float-fade-in 0.3s ease;
  backdrop-filter: blur(10px);
}

.menu-item {
  padding: 24rpx 40rpx;
  font-size: 30rpx;
  color: #2c3e50;
  transition: all 0.3s ease;
  position: relative;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: rgba(127, 182, 159, 0.1);
}

/* 设备列表 */
.device-list {
  padding: 30rpx 20rpx;
  margin-bottom: 140rpx;
}

.device-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
}

.device-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.device-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #2c3e50;
}

.device-arrow {
  color: #95a5a6;
  font-size: 36rpx;
  margin-left: 14rpx;
}

/* 删除按钮样式 */
.delete-btn {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 18rpx rgba(231, 76, 60, 0.3);
  transition: all 0.3s ease;
}

.delete-btn:active {
  transform: scale(0.9);
}

.delete-icon {
  color: white;
  font-size: 44rpx;
  font-weight: bold;
  line-height: 1;
  margin-top: -6rpx;
}

/* 完成按钮容器 */
.finish-btn-container {
  position: fixed;
  bottom: 30rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  padding: 0 30rpx;
  z-index: 10;
}

.finish-btn {
  width: 90%;
  height: 96rpx;
  background: linear-gradient(135deg, #7FB69F 0%, #6aa085 100%);
  border-radius: 48rpx;
  color: white;
  font-size: 34rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(127, 182, 159, 0.4);
  letter-spacing: 2rpx;
  transition: all 0.3s ease;
  border: none;
}

.finish-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(127, 182, 159, 0.6);
}

/* 弹窗样式 */
.popup-change {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  backdrop-filter: blur(4px);
  animation: fadeIn 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.popup-content {
  width: 80%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 24rpx 64rpx rgba(0, 0, 0, 0.2);
  animation: scaleIn 0.3s ease;
  padding: 40rpx;
}

@keyframes scaleIn {
  from { transform: scale(0.9); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

.popup-change-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 30rpx;
  text-align: center;
}

.popup-change-input {
  width: 100%;
  height: 88rpx;
  background: rgba(240, 242, 245, 0.6);
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #2c3e50;
  border: 2rpx solid rgba(233, 236, 239, 0.8);
  transition: all 0.3s ease;
  margin-bottom: 30rpx;
}

.popup-change-input:focus {
  border-color: rgba(127, 182, 159, 0.5);
  background: rgba(240, 242, 245, 0.9);
}

.selector-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #7f8c8d;
  margin-bottom: 12rpx;
  display: block;
}

.picker-view {
  width: 100%;
  height: 88rpx;
  background: rgba(240, 242, 245, 0.6);
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 2rpx solid rgba(233, 236, 239, 0.8);
  transition: all 0.3s ease;
}

.picker-view:active {
  background: rgba(240, 242, 245, 0.9);
  border-color: rgba(127, 182, 159, 0.3);
}

.picker-arrow {
  font-size: 24rpx;
  color: #95a5a6;
  margin-left: 10rpx;
}

.popup-btns {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-top: 10rpx;
}

.popup-btn {
  width: 45%;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: none;
}

.popup-btn.cancel {
  background: #f1f2f6;
  color: #7f8c8d;
}

.popup-btn.cancel:active {
  transform: scale(0.97);
  background: #e5e7eb;
}

.popup-btn.confirm {
  background: linear-gradient(135deg, #7FB69F 0%, #6aa085 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(127, 182, 159, 0.4);
}

.popup-btn.confirm:active {
  transform: scale(0.97);
  box-shadow: 0 4rpx 12rpx rgba(127, 182, 159, 0.6);
}

/* 动画 */
@keyframes float-fade-in {
  from { opacity: 0; transform: translateY(-20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* 连接设备区域 */
.connected-devices-section {
  width: 100%;
  margin-bottom: 30rpx;
}

/* 连接状态提示 */
.connect-status {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(127, 182, 159, 0.3);
  border-top: 4rpx solid #7FB69F;
  border-radius: 50%;
  margin-right: 16rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 设备列表区域 */
.connected-devices-list {
  max-height: 400rpx;
  overflow-y: auto;
  margin-top: 16rpx;
}

.connected-device-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: rgba(240, 242, 245, 0.6);
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid rgba(233, 236, 239, 0.8);
  transition: all 0.3s ease;
}

.connected-device-item:active {
  transform: scale(0.98);
}

.connected-device-item.selected {
  background: rgba(127, 182, 159, 0.1);
  border-color: rgba(127, 182, 159, 0.5);
}

.device-info {
  display: flex;
  align-items: center;
}

.device-type-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: linear-gradient(135deg, rgba(127, 182, 159, 0.2) 0%, rgba(106, 160, 133, 0.2) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.device-type-code {
  font-size: 28rpx;
  font-weight: 600;
  color: #7FB69F;
}

.device-details {
  display: flex;
  flex-direction: column;
}

.device-type-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 4rpx;
}

.device-id {
  font-size: 24rpx;
  color: #7f8c8d;
}

.select-indicator {
  color: #7FB69F;
  font-size: 40rpx;
  font-weight: bold;
}

/* 无设备提示 */
.no-devices {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.no-devices-text {
  font-size: 28rpx;
  color: #95a5a6;
  margin-bottom: 20rpx;
}

.retry-btn {
  font-size: 28rpx;
  color: #7FB69F;
  padding: 12rpx 30rpx;
  background: rgba(127, 182, 159, 0.1);
  border-radius: 40rpx;
  transition: all 0.3s ease;
}

.retry-btn:active {
  transform: scale(0.95);
  background: rgba(127, 182, 159, 0.2);
}