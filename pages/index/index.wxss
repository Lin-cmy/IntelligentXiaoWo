.container {
  height: 100vh;
  background: linear-gradient(to bottom, #90e6d3, #a9c3f1);
  position: relative;
}

.swiper {
  width: 100%;
  height: 80vh;
  margin-top: 10vh;
}

.slide-item {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.slide-item image {
  width: 100%;
  height: 90%;
  border-radius: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.2);
  transition: all 0.5s ease;
  opacity: 0.8;
}
swiper-item.wx-swiper-dot {
  width: calc(100% - 160rpx) !important;
  left: 80rpx;
}

swiper-item.wx-swiper-dot-active image {
  opacity: 1;
  transform: scale(1.05);
}
.slide-content {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: #fff;
  z-index: 2;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
  text-shadow: 0 2px 4px rgba(0,0,0,0.3);
}

.subtitle {
  font-size: 32rpx;
  opacity: 0.9;
  display: block;
  text-shadow: 0 2px 4px rgba(0,0,0,0.3);
}

.start-btn-wrapper {
  position: absolute;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  opacity: 0;
  transition: opacity 0.5s ease;
}

.start-btn-wrapper.show {
  opacity: 1;
}

.start-btn {
  width: 400rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: rgba(255,255,255,0.9);
  color: #333;
  font-size: 32rpx;
  border-radius: 44rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.2);
  transition: all 0.3s ease;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.start-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.2);
}

.dots {
  position: absolute;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 16rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background: rgba(255,255,255,0.4);
  border-radius: 6rpx;
  transition: all 0.3s ease;
}

.dot.active {
  width: 28rpx;
  background: rgb(8, 175, 153);
}