.family-manager-container {
  padding: 32rpx 16rpx;
  background: rgba(0,0,0,0.06);
  min-height: 100vh;
}

.family-manager-section1 {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  margin-bottom: 48rpx;
  justify-content: flex-start;
}

.family-square {
  width: 750rpx;
  height: 180rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 6rpx 24rpx rgba(0,0,0,0.06);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between; /* 让左右对齐 */
  padding: 0 40rpx;
  margin-bottom: 0;
  position: relative;
  transition: box-shadow 0.2s;
}
.family-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.family-name {
  font-size: 40rpx;
  color: #333;
  font-weight: 500;
}
.family-identity {
  margin-top: 24rpx; /* 比padding更灵活 */
  font-size: 28rpx;
  color: #888;
}

/* 删除按钮 */
.family-delete-btn {
  width: 56rpx;
  height: 56rpx;
  background: #ff4d4f;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  box-shadow: 0 2rpx 8rpx rgba(255,77,79,0.18);
}
.family-delete-minus {
  color: #fff;
  font-size: 44rpx;
  font-weight: bold;
  line-height: 1;
}

