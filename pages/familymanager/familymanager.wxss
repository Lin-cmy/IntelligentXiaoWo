.family-manager-container {
  padding: 32rpx 16rpx;
  background: rgba(0,0,0,0.06);
  min-height: 100vh;
}

.family-manager-section1 {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  margin-bottom: 48rpx;
  justify-content: flex-start;
}

.family-square {
  width: 750rpx;
  height: 180rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 6rpx 24rpx rgba(0,0,0,0.06);
  display: flex;
  padding: 40rpx 0 0 40rpx;
  margin-bottom: 0;
  transition: box-shadow 0.2s;
}
.family-name {
  font-size: 40rpx;
  color: #333;
  font-weight: 500;
}
.family-identity {
  padding: 100rpx 0 0 0;
}

