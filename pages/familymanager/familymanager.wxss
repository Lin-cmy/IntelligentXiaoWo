/* 完成按钮样式 */
.finish-btn {
  margin-top: 32rpx;
  width: 750rpx;
  height: 100rpx;
  background: #4ade80;
  border-radius: 16rpx;
  color: #fff;
  font-size: 34rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
  letter-spacing: 2rpx;
}

.popup-mask {
  position: fixed;
  left: 0; right: 0; top: 0; bottom: 0;
  background: rgba(0,0,0,0.4);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.popup {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.14);
  padding: 48rpx 32rpx 32rpx 32rpx;
  width: 560rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
}
.popup-input {
  border: 1rpx solid #ccc;
  border-radius: 12rpx;
  width: 100%;
  padding: 16rpx;
  font-size: 28rpx;
  margin-bottom: 36rpx;
}
.popup-btns {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.popup-btn {
  width: 44%;
  padding: 16rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
}
.popup-btn.cancel {
  background: #f0f0f0;
  color: #666;
}
.popup-btn.confirm {
  background: #4ade80;
  color: #fff;
}