/* 全局页面样式 */
page {
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
  box-sizing: border-box;
  padding-bottom: 40rpx;
}

/* 容器样式 */
.family-manager-container {
  padding: 30rpx 20rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 顶部标题区域 */
.header-section {
  padding: 20rpx 30rpx 40rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2c3e50;
}

/* 家庭列表区域 */
.family-list-section {
  margin-bottom: 40rpx;
}

.family-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  padding: 30rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
  position: relative;
}

.family-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.family-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.family-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.family-details {
  display: flex;
  flex-direction: column;
}

.family-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.family-identity {
  font-size: 28rpx;
  color: #7f8c8d;
}

/* 删除按钮 */
.family-delete-btn {
  width: 70rpx;
  height: 70rpx;
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 18rpx rgba(231, 76, 60, 0.3);
  transition: all 0.3s ease;
  z-index: 2;
}

.family-delete-btn:active {
  transform: scale(0.9);
}

.family-delete-minus {
  color: white;
  font-size: 44rpx;
  font-weight: bold;
  line-height: 1;
  margin-top: -6rpx;
}

/* 功能按钮区域 */
.action-section {
  margin-top: 40rpx;
}

.action-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  padding: 30rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
}

.action-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  font-size: 40rpx;
}

.add-icon {
  background: linear-gradient(135deg, rgba(127, 182, 159, 0.2) 0%, rgba(106, 160, 133, 0.2) 100%);
  color: #7FB69F;
}

.search-icon {
  background: linear-gradient(135deg, rgba(52, 152, 219, 0.2) 0%, rgba(41, 128, 185, 0.2) 100%);
  color: #3498db;
}

.delete-icon {
  background: linear-gradient(135deg, rgba(231, 76, 60, 0.2) 0%, rgba(192, 57, 43, 0.2) 100%);
  color: #e74c3c;
}

.action-text {
  flex: 1;
}

.action-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #2c3e50;
  display: block;
  margin-bottom: 8rpx;
}

.action-desc {
  font-size: 26rpx;
  color: #7f8c8d;
}

/* 完成按钮 */
.finish-btn {
  background: linear-gradient(135deg, #7FB69F 0%, #6aa085 100%);
  color: white;
  padding: 24rpx 0;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(127, 182, 159, 0.4);
  margin-top: 30rpx;
  letter-spacing: 2rpx;
  transition: all 0.3s ease;
}

.finish-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(127, 182, 159, 0.6);
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  backdrop-filter: blur(4px);
  animation: fadeIn 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-content {
  width: 80%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 24rpx 64rpx rgba(0, 0, 0, 0.2);
  animation: scaleIn 0.3s ease;
}

.search-modal {
  max-width: 680rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

@keyframes scaleIn {
  from { transform: scale(0.9); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

.modal-header {
  padding: 40rpx 40rpx 20rpx;
  text-align: center;
  position: relative;
}

.modal-header:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 40rpx;
  right: 40rpx;
  height: 2rpx;
  background: linear-gradient(to right, transparent, rgba(127, 182, 159, 0.3), transparent);
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  letter-spacing: 2rpx;
}

.modal-body {
  padding: 30rpx 40rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.modal-input {
  width: 100%;
  height: 88rpx;
  background: rgba(240, 242, 245, 0.6);
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #2c3e50;
  border: 2rpx solid rgba(233, 236, 239, 0.8);
  transition: all 0.3s ease;
}

.modal-footer {
  display: flex;
  padding: 20rpx 40rpx 40rpx;
  justify-content: space-between;
}

.modal-btn {
  width: 45%;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.modal-btn.cancel {
  background: #f1f2f6;
  color: #7f8c8d;
}

.modal-btn.cancel:active {
  transform: scale(0.97);
  background: #e5e7eb;
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #7FB69F 0%, #6aa085 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(127, 182, 159, 0.4);
}

.modal-btn.confirm:active {
  transform: scale(0.97);
  box-shadow: 0 4rpx 12rpx rgba(127, 182, 159, 0.6);
}

.modal-btn.disabled {
  background: #ccc;
  color: white;
  opacity: 0.6;
  box-shadow: none;
}

/* 搜索相关样式 */
.search-box {
  padding: 30rpx 40rpx 20rpx;
  display: flex;
  width: 100%;
  box-sizing: border-box;
}

.search-input {
  flex: 1;
  height: 80rpx;
  background: rgba(240, 242, 245, 0.6);
  border-radius: 16rpx 0 0 16rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #2c3e50;
  border: 2rpx solid rgba(233, 236, 239, 0.8);
  border-right: none;
}

.search-btn {
  width: 120rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #7FB69F 0%, #6aa085 100%);
  color: white;
  border-radius: 0 16rpx 16rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.search-btn:active {
  opacity: 0.9;
}

.search-results {
  flex: 1;
  max-height: 500rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.search-item {
  padding: 30rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s ease;
  border-radius: 16rpx;
  margin-bottom: 10rpx;
}

.search-item.selected {
  background: rgba(127, 182, 159, 0.1);
}

.search-item-info {
  display: flex;
  flex-direction: column;
}

.search-item-name {
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.search-item-address {
  font-size: 26rpx;
  color: #7f8c8d;
}

.search-item-check {
  color: #7FB69F;
  font-size: 40rpx;
  font-weight: bold;
}

.no-results {
  padding: 60rpx 0;
  text-align: center;
  color: #95a5a6;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.no-results-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.selected-home-info {
  margin: 0 40rpx 30rpx;
  padding: 20rpx 30rpx;
  background: rgba(127, 182, 159, 0.1);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
}

.selected-home-title {
  font-size: 26rpx;
  color: #7f8c8d;
  margin-right: 12rpx;
}

.selected-home-name {
  font-size: 30rpx;
  color: #2c3e50;
  font-weight: 600;
}