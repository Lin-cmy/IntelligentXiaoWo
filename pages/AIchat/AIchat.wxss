/* chat.wxss */
.chat-container {
  height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  display: flex;
  flex-direction: column;
}

/* 顶部标题栏 */
.chat-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
}

.header-left, .header-right {
  width: 80rpx;
}

.back-icon {
  font-size: 36rpx;
  color: #7FB69F;
  font-weight: bold;
}

.header-center {
  display: flex;
  align-items: center;
  flex: 1;
  justify-content: center;
  gap: 20rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  border: 3rpx solid #7FB69F;
}

/* 聊天内容区域 */
.chat-content {
  flex: 1;
  padding: 20rpx;
  overflow: hidden;
}

.message-list {
  height: 100%;
}

.message-item {
  display: flex;
  margin-bottom: 30rpx;
  align-items: flex-end;
}

.user-message {
  flex-direction: row-reverse;
}

.avatar-wrapper {
  margin: 0 20rpx;
}

.message-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  border: 2rpx solid #e9ecef;
}

.message-content {
  max-width: 70%;
}

.message-bubble {
  padding: 24rpx 30rpx;
  border-radius: 24rpx;
  position: relative;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.ai-bubble {
  background: rgba(255, 255, 255, 0.95);
  color: #2c3e50;
  border-bottom-left-radius: 8rpx;
}

.user-bubble {
  background: linear-gradient(135deg, #7FB69F 0%, #6aa085 100%);
  color: white;
  border-bottom-right-radius: 8rpx;
}

.message-text {
  font-size: 28rpx;
  line-height: 1.5;
  display: block;
}

.message-time {
  font-size: 22rpx;
  opacity: 0.7;
  margin-top: 8rpx;
  display: block;
}

/* 示例消息 */
.example-messages {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin: 30rpx 0;
  padding: 0 80rpx;
}

.example-item {
  background: rgba(255, 255, 255, 0.8);
  border: 2rpx solid #e9ecef;
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  color: #7f8c8d;
  transition: all 0.3s ease;
}

.example-item:active {
  background: #7FB69F;
  color: white;
  transform: scale(0.95);
}

/* 底部输入区域 */
.chat-input {
  background: rgba(255, 255, 255, 0.95);
  padding: 20rpx 30rpx 40rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
}

.ai-assistant-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
  padding: 16rpx;
  background: rgba(127, 182, 159, 0.1);
  border-radius: 16rpx;
}

.assistant-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
}

.assistant-text {
  font-size: 26rpx;
  color: #7FB69F;
  font-weight: 500;
}

/* 输入控制 */
.input-wrapper {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 24rpx;
  padding: 16rpx 20rpx;
  border: 2rpx solid #e9ecef;
}

.text-input {
  flex: 1;
  font-size: 28rpx;
  color: #2c3e50;
  background: transparent;
}

.input-actions {
  display: flex;
  gap: 16rpx;
  margin-left: 16rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: #e9ecef;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.send-btn {
  background: #7FB69F;
}

.action-btn .icon {
  font-size: 24rpx;
}

/* 语音输入 */
.voice-wrapper {
  text-align: center;
}

.voice-input-area {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 30rpx;
}

.voice-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background: linear-gradient(135deg, #7FB69F 0%, #6aa085 100%);
  color: white;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 24rpx rgba(127, 182, 159, 0.4);
}

.voice-btn.recording {
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  transform: scale(1.1);
}

.voice-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.voice-icon.pulse {
  animation: pulse 1s infinite;
}

.voice-text {
  font-size: 24rpx;
  font-weight: 500;
}

.switch-text-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #e9ecef;
  display: flex;
  align-items: center;
  justify-content: center;
}

.switch-text-btn .icon {
  font-size: 32rpx;
}

/* 录音状态 */
.recording-hint {
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  color: #e74c3c;
}

.sound-waves {
  display: flex;
  gap: 8rpx;
}

.wave {
  width: 6rpx;
  height: 40rpx;
  background: #e74c3c;
  border-radius: 3rpx;
  animation: wave 1.2s infinite ease-in-out;
}

.wave1 { animation-delay: 0s; }
.wave2 { animation-delay: 0.2s; }
.wave3 { animation-delay: 0.4s; }

/* 动画 */
@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

@keyframes wave {
  0%, 100% { height: 20rpx; }
  50% { height: 60rpx; }
} 

/* AI思考中动画 */
.thinking-dots {
  display: flex;
  gap: 6rpx;
  margin-top: 12rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  background-color: #7FB69F;
  border-radius: 50%;
  animation: thinking 1.4s infinite ease-in-out;
}

.dot:nth-child(1) { animation-delay: 0s; }
.dot:nth-child(2) { animation-delay: 0.2s; }
.dot:nth-child(3) { animation-delay: 0.4s; }

@keyframes thinking {
  0%, 60%, 100% { transform: scale(0.8); opacity: 0.6; }
  30% { transform: scale(1.2); opacity: 1; }
}

/* 禁用状态 */
.disabled {
  opacity: 0.5;
  pointer-events: none;
}

/* 保留其他原有样式 */
.chat-container {
  height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  display: flex;
  flex-direction: column;
}

