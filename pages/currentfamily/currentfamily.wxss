}

/* Ê†áÈ¢òÂå∫Âüü */
.current-family-header {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 36rpx 30rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
