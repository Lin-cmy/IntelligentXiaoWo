.current-family-container{
  padding: 32rpx 16rpx;
  background: rgba(0,0,0,0.06);
  min-height: 100vh;
}

.current-family-header {
  padding: 32rpx 16rpx;
  background: #ffffff;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.current-family-name {
  padding: 0 0 0 16rpx;
  font-size: 45rpx;
  color: #333;
}

.current-family-section1 {
  padding: 10rpx;
  background: #ffffff;
  border-radius: 24rpx;
  margin-bottom: 16rpx;
}
.current-family-message {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #faf9f9;
  border-radius: 24rpx;
  margin-bottom: 6rpx;
  height: 70rpx;
}

.msg-left {
  flex: 1;
  display: flex;
  align-items: center;
}

.msg-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
  justify-content: flex-end;
}

.part1 {
  font-size: 38rpx;
  color: #333;
}
.part2 {
  font-size: 35rpx;
  color: rgb(97, 91, 91);
}
.part3 {
  font-size: 35rpx;
  color: #999;
}

.family-member {
  padding: 20rpx;
  font-size: 50rpx;
  color: #333;
}
.current-family-section2 {
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  gap: 32rpx 36rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-top: 20rpx;
}
.member-introduction {
  font-size: 80rpx;
  color: #888;
}
.member-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 18rpx;
}
.member-icon {
  width: 85rpx;
  height: 85rpx;
  border-radius: 50%;
  object-fit: cover;
  background: #E2E6F7;
  margin-bottom: 12rpx;
}
.add-member-icon {
  background: #ffffff;
  border: 2rpx dashed #5A8DEE;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}
.member-name {
  font-size: 28rpx;
  color: #333;
  margin: 0;
  text-align: center;
}
.member-detail {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 24rpx 36rpx;
}
.member-introduction {
  width: 100%;
  color: #888;
  font-size: 24rpx;
  margin-bottom: 18rpx;
}
.member-icon.add-member-icon {
  width: 80rpx;
  height: 80rpx;
  border: 2rpx dashed #5A8DEE;
  border-radius: 50%;
  position: relative;
  margin-right: 12rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.member-icon.add-member-icon::before,
.member-icon.add-member-icon::after {
  content: '';
  position: absolute;
  background: #5A8DEE;
  border-radius: 2rpx;
}
.member-icon.add-member-icon::before {
  width: 36rpx;
  height: 2rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.member-icon.add-member-icon::after {
  width: 2rpx;
  height: 36rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

/* 弹窗样式美化 */
.popup-change {
  position: fixed;
  left: 0; right: 0; top: 0; bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(2px);
}

.popup-content {
  width: 85%;
  max-width: 600rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.12);
  animation: popup-fade-in 0.3s ease;
}

@keyframes popup-fade-in {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.popup-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
  text-align: center;
}

.popup-desc {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 32rpx;
  text-align: center;
}

.popup-input {
  width: 100%;
  height: 80rpx;
  background: #f8f8f8;
  border: 1rpx solid #eaeaea;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 40rpx;
  box-sizing: border-box;
}

.popup-input:focus {
  border-color: #5A8DEE;
  background: #fff;
}

.popup-btns {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.popup-btn {
  width: 45%;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.popup-btn.cancel {
  background: #f0f2f5;
  color: #666;
}

.popup-btn.confirm {
  background: #5A8DEE;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(90,141,238,0.3);
}

.popup-btn.confirm:active {
  background: #4a7dde;
  transform: translateY(2rpx);
}

/* 申请管理按钮 */
.request-manage-btn {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.manage-icon {
  width: 50rpx;
  height: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.manage-icon-bar {
  width: 100%;
  height: 6rpx;
  background-color: #5A8DEE;
  border-radius: 3rpx;
}

.notification-dot {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #ff4d4f;
}

/* 申请弹窗样式 */
.requests-popup {
  width: 90%;
  max-width: 680rpx;
  max-height: 80vh;
}

.requests-list {
  width: 100%;
  max-height: 600rpx;
  margin-bottom: 20rpx;
}

.request-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
}

.request-user {
  display: flex;
  align-items: center;
}

.request-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: #E2E6F7;
  margin-right: 16rpx;
}

.request-username {
  font-size: 30rpx;
  color: #333;
}

.request-actions {
  display: flex;
  gap: 16rpx;
}

.request-btn {
  min-width: 100rpx;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: normal;
  margin: 0;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.request-btn.accept {
  background-color: #4ade80;
  color: #fff;
}

.request-btn.reject {
  background-color: #f5f5f5;
  color: #666;
}

.no-requests {
  padding: 40rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.popup-btns.single-btn {
  justify-content: center;
}

.popup-btns.single-btn .popup-btn {
  width: 60%;
}