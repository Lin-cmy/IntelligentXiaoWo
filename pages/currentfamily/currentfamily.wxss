}

.current-family-name {
  font-size: 42rpx;
  font-weight: bold;
  color: #2c3e50;
}

/* Áî≥ËØ∑ÁÆ°ÁêÜÊåâÈíÆ */
.request-manage-btn {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(127, 182, 159, 0.1);
  border-radius: 50%;
  transition: all 0.3s ease;
}

.request-manage-btn:active {
  transform: scale(0.95);
  background: rgba(127, 182, 159, 0.2);
}

.manage-icon {
  width: 40rpx;
  height: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.manage-icon-bar {
  width: 100%;
  height: 6rpx;
  background: linear-gradient(135deg, #7FB69F 0%, #6aa085 100%);
  border-radius: 3rpx;
}

.notification-dot {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #e74c3c;
  box-shadow: 0 0 6rpx rgba(231, 76, 60, 0.5);
}

/* ÂÆ∂Â∫≠‰ø°ÊÅØÂå∫Âüü */
.current-family-section1 {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(10px);
}

.current-family-message {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 24rpx;
  background: rgba(248, 249, 250, 0.7);
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.current-family-message:last-child {
  margin-bottom: 0;
}

.current-family-message:active {
  transform: scale(0.99);
  background: rgba(127, 182, 159, 0.1);
}

.msg-left {
  flex: 1;
  display: flex;
  align-items: center;
}

.msg-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.part1 {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.part2 {
  font-size: 28rpx;
  color: #7f8c8d;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.part3 {
  font-size: 28rpx;
  color: #95a5a6;
  margin-left: 8rpx;
}

/* ÂÆ∂Â∫≠ÊàêÂëòÂå∫Âüü */
.family-member {
  padding: 20rpx 10rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #2c3e50;
  display: block;
  margin-bottom: 10rpx;
}

.current-family-section2 {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(10px);
  position: relative;
}

.member-introduction {
  width: 100%;
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 30rpx;
  display: block;
}

.member-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin: 0 20rpx 30rpx;
  transition: all 0.3s ease;
  width: 110rpx;
}

.member-item:active {
  transform: scale(0.95);
}

.member-icon {
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
  background: linear-gradient(135deg, rgba(127, 182, 159, 0.2) 0%, rgba(106, 160, 133, 0.2) 100%);
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.add-member-icon {
  border: 2rpx dashed #7FB69F;
  background: rgba(255, 255, 255, 0.9);
  position: relative;
}

.add-member-icon::before,
.add-member-icon::after {
  content: '';
  position: absolute;
  background: #7FB69F;
  border-radius: 2rpx;
}

.add-member-icon::before {
  width: 36rpx;
  height: 4rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.add-member-icon::after {
  width: 4rpx;
  height: 36rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.member-name {
  font-size: 26rpx;
  color: #2c3e50;
  text-align: center;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* ÂºπÁ™óÊ†∑Âºè */
.popup-change {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  backdrop-filter: blur(4px);
  animation: fadeIn 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.popup-content {
  width: 80%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 24rpx 64rpx rgba(0, 0, 0, 0.2);
  animation: scaleIn 0.3s ease;
  padding: 40rpx;
}

.requests-popup {
  max-width: 680rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

@keyframes scaleIn {
  from { transform: scale(0.9); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  letter-spacing: 2rpx;
  text-align: center;
  margin-bottom: 16rpx;
}

.popup-desc {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 30rpx;
  text-align: center;
}

.popup-input {
  width: 100%;
  height: 88rpx;
  background: rgba(240, 242, 245, 0.6);
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #2c3e50;
  border: 2rpx solid rgba(233, 236, 239, 0.8);
  transition: all 0.3s ease;
  margin-bottom: 40rpx;
}

.popup-input:focus {
  border-color: rgba(127, 182, 159, 0.5);
  background: rgba(240, 242, 245, 0.9);
}

.popup-btns {
  display: flex;
  justify-content: space-between;
}

.popup-btn {
  width: 45%;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.popup-btn.cancel {
  background: #f1f2f6;
  color: #7f8c8d;
}

.popup-btn.cancel:active {
  transform: scale(0.97);
  background: #e5e7eb;
}

.popup-btn.confirm {
  background: linear-gradient(135deg, #7FB69F 0%, #6aa085 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(127, 182, 159, 0.4);
}

.popup-btn.confirm:active {
  transform: scale(0.97);
  box-shadow: 0 4rpx 12rpx rgba(127, 182, 159, 0.6);
}

.popup-btns.single-btn {
  justify-content: center;
}

.popup-btns.single-btn .popup-btn {
  width: 60%;
}

/* ËÆøÂÆ¢Áî≥ËØ∑ÂàóË°® */
.requests-list {
  max-height: 600rpx;
  overflow-y: auto;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.request-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: rgba(248, 249, 250, 0.7);
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.request-user {
  display: flex;
  align-items: center;
}

.request-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
  background: linear-gradient(135deg, rgba(127, 182, 159, 0.2) 0%, rgba(106, 160, 133, 0.2) 100%);
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.request-username {
  font-size: 30rpx;
  color: #2c3e50;
  font-weight: 500;
}

.request-actions {
  display: flex;
  gap: 16rpx;
}

.request-btn {
  min-width: 100rpx;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  transition: all 0.3s ease;
  margin: 0;
}

.request-btn.accept {
  background: linear-gradient(135deg, #7FB69F 0%, #6aa085 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(127, 182, 159, 0.4);
}

.request-btn.accept:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(127, 182, 159, 0.6);
}

.request-btn.reject {
  background: #f1f2f6;
  color: #7f8c8d;
}

.request-btn.reject:active {
  transform: scale(0.95);
  background: #e5e7eb;
}

.no-requests {
  padding: 60rpx 0;
  text-align: center;
  color: #95a5a6;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
}

.no-requests:before {
  content: "üîç";
  font-size: 60rpx;
  margin-bottom: 20rpx;
