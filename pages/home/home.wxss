page {
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
  box-sizing: border-box;
  padding-bottom: 40rpx;
}

/* 顶部标题区域 - 修改为明确的左右对齐 */
.header-section {
  display: flex;
  padding: 40rpx 30rpx 20rpx;
  justify-content: space-between; /* 确保左右两端对齐 */
  align-items: center;
  /* background: rgba(255, 255, 255, 0.8); */
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  backdrop-filter: blur(10px);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.title-section {
  display: flex;
  align-items: center;
  cursor: pointer;
}

.home-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-right: 10rpx;
}

.triangle-down {
  width: 0;
  height: 0;
  border-left: 15rpx solid transparent;
  border-right: 15rpx solid transparent;
  border-top: 20rpx solid #7FB69F;
  align-self: center;
  margin-top: 6rpx;
}

/* 刷新按钮 - 确保靠右对齐 */
.refresh-button {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(127, 182, 159, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  margin-left: auto; /* 确保靠右 */
}

.refresh-button:active {
  transform: scale(0.95);
}

.refresh-icon {
  font-size: 40rpx;
  color: #7FB69F;
}

.refreshing {
  animation: spin 1.2s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 房间筛选栏 */
.filter-bar {
  white-space: nowrap;
  background: rgba(255, 255, 255, 0.8);
  padding: 20rpx 10rpx;
  overflow-x: auto;
  margin: 0 20rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  backdrop-filter: blur(10px);
}

.filter-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin: 0 10rpx;
  border-radius: 40rpx;
  background: #f0f2f5;
  font-size: 28rpx;
  color: #7f8c8d;
  transition: all 0.3s ease;
}

.filter-item:active {
  transform: scale(0.95);
}

.filter-item.active {
  background: linear-gradient(135deg, #7FB69F 0%, #6aa085 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(127, 182, 159, 0.4);
}

/* 内容区域 */
.content-section {
  padding: 0 20rpx;
}

/* 设备网格 - 修改为每行两个设备 */
.device-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 10rpx;
}

/* 设备卡片 - 修改为正方形且每行两个 */
.device-card {
  width: 48%; /* 略小于50%，考虑间距 */
  aspect-ratio: 1/1; /* 确保是正方形 */
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
  box-sizing: border-box;
}

.device-card:active {
  transform: scale(0.97);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.device-icon-container {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, rgba(127, 182, 159, 0.2) 0%, rgba(106, 160, 133, 0.2) 100%);
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.device-icon {
  width: 60rpx;
  height: 60rpx;
}

.device-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 10rpx;
  text-align: center;
}

.device-status {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #7f8c8d;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background: #95a5a6;
  margin-right: 8rpx;
}

.status-dot.active {
  background: #2ecc71;
  box-shadow: 0 0 8rpx rgba(46, 204, 113, 0.5);
}

/* 空设备提示 */
.empty-devices {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #95a5a6;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.7;
}

.empty-devices text {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.empty-hint {
  font-size: 26rpx !important;
  font-weight: normal !important;
  opacity: 0.7;
}

/* 家庭选择弹窗 */
.popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: transparent;
  z-index: 98;
}

.popup {
  position: absolute;
  top: 120rpx;
  left: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  box-shadow: 0 12rpx 36rpx rgba(0, 0, 0, 0.15);
  z-index: 99;
  padding: 16rpx;
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
  min-width: 300rpx;
}

.popup-item {
  padding: 24rpx 30rpx;
  color: #2c3e50;
  border-radius: 16rpx;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
}

.home-icon {
  margin-right: 16rpx;
  font-size: 32rpx;
}

.popup-divider {
  height: 2rpx;
  background: rgba(0, 0, 0, 0.05);
  margin: 8rpx 0;
}

.popup-item:last-child {
  margin-bottom: 0;
}

.popup-item-hover {
  background: linear-gradient(135deg, #7FB69F 0%, #6aa085 100%);
  color: #fff;
}

/* 创建家庭弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  backdrop-filter: blur(4px);
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-content {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 24rpx 64rpx rgba(0, 0, 0, 0.2);
  z-index: 1000;
  animation: scaleIn 0.3s ease;
}

@keyframes scaleIn {
  from { transform: translate(-50%, -50%) scale(0.9); opacity: 0; }
  to { transform: translate(-50%, -50%) scale(1); opacity: 1; }
}

.modal-header {
  padding: 40rpx 40rpx 20rpx;
  text-align: center;
  position: relative;
}

.modal-header:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 40rpx;
  right: 40rpx;
  height: 2rpx;
  background: linear-gradient(to right, transparent, rgba(127, 182, 159, 0.3), transparent);
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  letter-spacing: 2rpx;
}

.modal-body {
  padding: 30rpx 40rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.modal-input {
  width: 100%;
  height: 88rpx;
  background: rgba(240, 242, 245, 0.6);
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #2c3e50;
  border: 2rpx solid rgba(233, 236, 239, 0.8);
  transition: all 0.3s ease;
}

.modal-input:focus {
  border-color: rgba(127, 182, 159, 0.5);
  background: rgba(240, 242, 245, 0.9);
}

.modal-footer {
  display: flex;
  padding: 20rpx 40rpx 40rpx;
  justify-content: space-between;
}

.modal-btn {
  width: 45%;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.modal-btn.cancel {
  background: #f1f2f6;
  color: #7f8c8d;
}

.modal-btn.cancel:active {
  transform: scale(0.97);
  background: #e5e7eb;
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #7FB69F 0%, #6aa085 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(127, 182, 159, 0.4);
}

.modal-btn.confirm:active {
  transform: scale(0.97);
  box-shadow: 0 4rpx 12rpx rgba(127, 182, 159, 0.6);
}