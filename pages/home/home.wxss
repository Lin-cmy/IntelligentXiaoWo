.home-header {
  display: flex;
  padding: 40rpx 24rpx 16rpx 24rpx;
}
.home-title {
  font-size: 50rpx;
  font-weight: bold;
  margin-right: 5rpx;
}
.triangle-down {
  margin-top: 30rpx;
  border-left: 15rpx solid transparent;
  border-right: 15rpx solid transparent;
  border-top: 25rpx solid #333;
}
.popup {
  position: absolute;
  top: 105rpx; left: 0;
  background: #eee;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.18);
  z-index: 99;
  padding: 10rpx;
}
.popup-item {
  padding: 20rpx 40rpx;
  color: #333;
  background: #fff;
  border-radius: 24rpx;
  margin-bottom: 5rpx;
}
.popup-item:last-child {
  margin-bottom: 0;
}
.popup-item-hover {
  padding:20rpx 40rpx;
  background: rgb(101, 224, 132);
  color: #fff;
}

.filter-bar {
  white-space: nowrap;
  background: #f7f7f8;
  padding: 12rpx 0;
  overflow-x: auto;
}
.filter-item {
  display: inline-block;
  padding: 8rpx 28rpx;
  margin: 0 12rpx;
  border-radius: 32rpx;
  background: #eee;
  font-size: 28rpx;
  color: #333;
}
.filter-item.active {
  background: #1aad19;
  color: #fff;
}

.device-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  padding: 24rpx;
  justify-content: flex-start;
}

.device-square {
  width: 45vw;
  aspect-ratio: 1/1;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.07);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.device-bg {
  width: 100%;
  height: 100%;
  left: 0; top: 0;
  z-index: 0;
  border-radius: 24rpx;
}

.device-name {
  font-size: 28rpx;
  color: #333;
}


.popup-mask {
  position: fixed;
  left: 0; right: 0; top: 0; bottom: 0;
  background: rgba(0,0,0,0.4);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.popup-section {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.14);
  padding: 48rpx 32rpx 32rpx 32rpx;
  width: 560rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
}
.popup-input {
  border: 1rpx solid #ccc;
  border-radius: 12rpx;
  width: 100%;
  padding: 16rpx;
  font-size: 28rpx;
  margin-bottom: 36rpx;
}
.popup-btns {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.popup-btn {
  width: 44%;
  padding: 16rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
}
.popup-btn.cancel {
  background: #f0f0f0;
  color: #666;
}
.popup-btn.confirm {
  background: #4ade80;
  color: #fff;
}