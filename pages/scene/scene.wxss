.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 30rpx 20rpx;
}

.scene-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.scene-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
}

.scene-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.scene-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  margin-right: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.scene-info {
  flex: 1;
}

.scene-title {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
}

.scene-title text {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.trophy-icon, .medal-icon {
  font-size: 24rpx;
}

.scene-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  margin-left: auto;
}

.scene-status.activated {
  background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
  color: white;
}

.scene-status.pending {
  background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
  color: white;
}

.scene-desc {
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.scene-users {
  font-size: 24rpx;
  color: #95a5a6;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.scene-users::before {
  content: "üë•";
  font-size: 20rpx;
}

