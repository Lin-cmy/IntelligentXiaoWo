.nav-bar {
  display: flex;
  justify-content: center;
  gap: 60rpx;
  margin-bottom: 40rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 20rpx 40rpx;
  backdrop-filter: blur(10px);
}

.nav-item {
  font-size: 28rpx;
  color: #7f8c8d;
  padding: 16rpx 32rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.nav-item.active {
  background: linear-gradient(135deg, #7FB69F 0%, #6aa085 100%);
  color: white;
  font-weight: 600;
}

