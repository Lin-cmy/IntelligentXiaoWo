/* pages/environment/environment.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 30rpx 20rpx;
  padding-bottom: 120rpx; /* 为底部按钮留出空间 */
  box-sizing: border-box;
}

.scene-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  width: 100%;
}

.scene-item {
  width: 100%;
  box-sizing: border-box;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
  position: relative; /* 为删除按钮定位做准备 */
}

.scene-item.delete-mode {
  padding-right: 80rpx; /* 为删除按钮预留空间 */
}

.scene-item:active:not(.delete-mode) {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.scene-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  margin-right: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.scene-info {
  flex: 1;
}

.scene-name {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
}

.scene-name text {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.trophy-icon, .medal-icon {
  font-size: 24rpx;
}

.scene-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  margin-left: auto;
}

.scene-status.activated {
  background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
  color: white;
}

.scene-status.pending {
  background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
  color: white;
}

.scene-desc {
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.scene-users {
  font-size: 24rpx;
  color: #95a5a6;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.scene-users::before {
  content: "👥";
  font-size: 20rpx;
}

/* 导航栏样式 */
.nav-bar {
  display: flex;
  justify-content: center;
  gap: 60rpx;
  margin-bottom: 40rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 20rpx 40rpx;
  backdrop-filter: blur(10px);
}

.nav-item {
  font-size: 28rpx;
  color: #7f8c8d;
  padding: 16rpx 32rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.nav-item.active {
  background: linear-gradient(135deg, #7FB69F 0%, #6aa085 100%);
  color: white;
  font-weight: 600;
}

/* 响应式设计 */
@media (max-width: 400px) {
  .scene-item {
    flex-direction: column;
    text-align: center;
  }

  .scene-image {
    margin-right: 0;
    margin-bottom: 20rpx;
  }

  .scene-name {
    justify-content: center;
  }
}

/* 底部按钮区域 */
.bottom-buttons {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  z-index: 10;
}

/* 完成按钮 - 删除模式下显示 */
.complete-btn {
  background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
  color: white;
  padding: 24rpx 100rpx;
  border-radius: 50rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  text-align: center;
}

.complete-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* 正常模式下的按钮区域 */
.action-buttons {
  display: flex;
  gap: 40rpx;
}

/* 添加场景按钮 */
.add-scene-btn {
  background: linear-gradient(135deg, #7FB69F 0%, #6aa085 100%);
  color: white;
  padding: 24rpx 40rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  font-weight: 600;
}

.add-scene-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.add-icon {
  font-size: 36rpx;
  font-weight: 700;
}

/* 删除场景按钮 */
.delete-scene-btn {
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  color: white;
  padding: 24rpx 40rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  font-weight: 600;
}

.delete-scene-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.delete-mode-icon {
  font-size: 36rpx;
  font-weight: 700;
}

/* 场景项上的删除按钮 */
.delete-btn {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  z-index: 5;
}

.delete-icon {
  color: white;
  font-size: 40rpx;
  font-weight: 700;
  margin-top: -8rpx; /* 微调居中位置 */
}

/* 弹窗样式 */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
  backdrop-filter: blur(3px);
}

.popup-content {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-width: 600rpx;
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  z-index: 101;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.15);
}

.popup-name {
  font-size: 36rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 30rpx;
  color: #2c3e50;
}

.popup-input {
  width: 100%;
  height: 80rpx;
  background: #f5f7fa;
  border-radius: 16rpx;
  padding: 0 24rpx;
  margin-bottom: 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  border: 1px solid #e5e7eb;
}

.popup-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.popup-btn {
  width: 45%;
  height: 80rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.popup-btn.cancel {
  background: #f1f2f6;
  color: #7f8c8d;
}

.popup-btn.confirm {
  background: linear-gradient(135deg, #7FB69F 0%, #6aa085 100%);
  color: white;
}