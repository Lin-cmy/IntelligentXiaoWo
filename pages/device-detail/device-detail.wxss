/* pages/device-detail/device-detail.wxss */
.detail-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 30rpx 20rpx 120rpx;
  box-sizing: border-box;
}

/* 顶部标题栏 */
.header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx 10rpx;
}

.back-btn {
  width: 70rpx;
  height: 70rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.back-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.back-icon {
  font-size: 36rpx;
  color: #2c3e50;
  font-weight: bold;
}

.device-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #2c3e50;
  flex: 1;
}

/* 设备概览卡片 */
.device-overview {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
}

.device-icon-container {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, rgba(127, 182, 159, 0.2) 0%, rgba(106, 160, 133, 0.2) 100%);
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}

.device-icon {
  font-size: 48rpx;
}

.device-basic-info {
  flex: 1;
}

.device-id {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 8rpx;
}

.device-status {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #7f8c8d;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
  background: #95a5a6;
  margin-right: 10rpx;
}

.status-dot.active {
  background: #2ecc71;
  box-shadow: 0 0 10rpx rgba(46, 204, 113, 0.5);
}

/* 数据表格区域 */
.data-section, .control-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
}

.data-table-container {
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.table-header {
  display: flex;
  background: linear-gradient(135deg, rgba(127, 182, 159, 0.2) 0%, rgba(106, 160, 133, 0.2) 100%);
  font-weight: bold;
}

.table-cell {
  padding: 24rpx 16rpx;
  font-size: 28rpx;
  text-align: center;
  word-break: break-word;
}

.time-cell {
  flex: 2;
  border-right: 1rpx solid rgba(0, 0, 0, 0.05);
}

.topic-cell {
  flex: 1.5;
  border-right: 1rpx solid rgba(0, 0, 0, 0.05);
}

.value-cell {
  flex: 1;
}

.table-body {
  max-height: 600rpx;
  overflow-y: auto;
  background: rgba(255, 255, 255, 0.7);
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.table-row:nth-child(even) {
  background-color: rgba(248, 249, 250, 0.7);
}

.table-row:hover {
  background-color: rgba(127, 182, 159, 0.1);
}

.empty-data {
  padding: 80rpx 0;
  text-align: center;
  color: #95a5a6;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

/* 刷新按钮 */
.refresh-container {
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}

.refresh-btn {
  background: linear-gradient(135deg, #7FB69F 0%, #6aa085 100%);
  color: white;
  border-radius: 40rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(127, 182, 159, 0.4);
  transition: all 0.3s ease;
}

.refresh-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(127, 182, 159, 0.6);
}

.refresh-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
}

/* 设备控制区域 */
.control-panel {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.control-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(248, 249, 250, 0.7);
  border-radius: 16rpx;
  padding: 30rpx;
  width: 40%;
  transition: all 0.3s ease;
}

.control-item:active {
  transform: scale(0.97);
  background: rgba(127, 182, 159, 0.1);
}

.control-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.control-item text {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}