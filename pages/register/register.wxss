/* register.wxss */
.register-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 40rpx 40rpx;
  position: relative;
  overflow: hidden;
}

.header-section {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(126, 182, 159, 0.3);
}

.welcome-text .title {
  display: block;
  font-size: 44rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
}

.welcome-text .subtitle {
  display: block;
  font-size: 26rpx;
  color: #7f8c8d;
  font-weight: 300;
}

.form-container {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
}

.input-group {
  margin-bottom: 50rpx;
}

.input-item {
  margin-bottom: 32rpx;
}

.input-label {
  display: block;
  font-size: 26rpx;
  color: #34495e;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input-field {
  width: 100%;
  height: 80rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #2c3e50;
  transition: all 0.3s ease;
}

.input-field:focus {
  border-color: #7FB69F;
  background: #fff;
  box-shadow: 0 0 0 6rpx rgba(127, 182, 159, 0.1);
}

.register-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #7FB69F 0%, #6aa085 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  margin-bottom: 32rpx;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.register-btn:disabled {
  background: #bdc3c7;
  transform: none;
}

.register-btn:not(:disabled):active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(127, 182, 159, 0.4);
}

.bottom-links {
  text-align: center;
}

.link-text {
  font-size: 26rpx;
  color: #7FB69F;
  font-weight: 500;
}

.decoration-dots {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
}

.dot {
  position: absolute;
  border-radius: 50%;
  background: rgba(127, 182, 159, 0.1);
}

.dot-1 {
  width: 80rpx;
  height: 80rpx;
  top: 15%;
  right: 15%;
  animation: float 6s ease-in-out infinite;
}

.dot-2 {
  width: 50rpx;
  height: 50rpx;
  bottom: 25%;
  left: 20%;
  animation: float 4s ease-in-out infinite reverse;
}

.dot-3 {
  width: 70rpx;
  height: 70rpx;
  top: 40%;
  left: 10%;
  animation: float 5s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-20rpx); }
} 