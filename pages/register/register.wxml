<!--register.wxml-->
<view class="register-container">
  <!-- 顶部装饰区域 -->
  <view class="header-section">
    <image class="logo-image" src="/images/pagesetting/others/mainpage.jpg" mode="aspectFit"></image>
    <view class="welcome-text">
      <text class="title">加入智慧小窝</text>
      <text class="subtitle">开启您的智能家居之旅</text>
    </view>
  </view>

  <!-- 注册表单区域 -->
  <view class="form-container">
    <view class="input-group">
      <view class="input-item">
        <text class="input-label">用户名</text>
        <input 
          class="input-field" 
          type="text" 
          placeholder="请输入用户名" 
          value="{{username}}"
          bindinput="onUsernameInput"
          maxlength="20"
        />
      </view>

      <view class="input-item">
        <text class="input-label">手机号</text>
        <input 
          class="input-field" 
          type="number" 
          placeholder="请输入手机号" 
          value="{{phone}}"
          bindinput="onPhoneInput"
          maxlength="11"
        />
      </view>
      
      <view class="input-item">
        <text class="input-label">密码</text>
        <input 
          class="input-field" 
          type="password" 
          placeholder="请输入密码(6位以上)" 
          value="{{password}}"
          bindinput="onPasswordInput"
        />
      </view>

      <view class="input-item">
        <text class="input-label">确认密码</text>
        <input 
          class="input-field" 
          type="password" 
          placeholder="请再次输入密码" 
          value="{{confirmPassword}}"
          bindinput="onConfirmPasswordInput"
        />
      </view>
    </view>

    <!-- 注册按钮 -->
    <button class="register-btn" bindtap="handleRegister" disabled="{{!canRegister}}">
      {{isLoading ? '注册中...' : '注册'}}
    </button>

    <!-- 底部链接 -->
    <view class="bottom-links">
      <text class="link-text" bindtap="goToLogin">已有账号？立即登录</text>
    </view>
  </view>

  <!-- 装饰元素 -->
  <view class="decoration-dots">
    <view class="dot dot-1"></view>
    <view class="dot dot-2"></view>
    <view class="dot dot-3"></view>
  </view>
</view> 